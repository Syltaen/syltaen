mixin form($form, $reactive = false)

    if !empty($form["success"])
        .form__success(id="success-".$form["form_id"]."")
            != $form["success"]

    else
        form(method="post" x-data=$reactive?"{}":false x-init=$reactive?"Alpine.\$form(\$data, \$el)":"")&attributes($attributes)
            input(type="hidden" name="honeypot")
            input(type="hidden" name="form_id" value=$form["form_id"])

            if !empty($form["errors"]["global"])
                p.color-error.font-bold.text-align-center!= $form["errors"]["global"]

            block