doctype

html(lang=site.language)

    //- =============================================================================
    //- > HEAD
    //- =============================================================================
    head
        meta(charset=site.charset)
        meta(name="description" content=site.description)
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="pingback" href=site.pingback_url)
        = wp_head()
        block head



    //- =============================================================================
    //- > BODY
    //- =============================================================================
    body(class=site.body_class)

        //- ==================================================
        //- > SITE
        //- ==================================================
        block site
            .site

                //- ==================================================
                //- > HEADER
                //- ==================================================
                block header
                    header(role="navigation").site-header

                        nav.site-header__nav.container
                            .row
                                .gr-2
                                    a.site-header__brand(href=site.url rel="home")= site.name

                                .gr-10
                                    //- ul.site-header__social.social.social--header
                                    //-     each soc in site.header.social
                                    //-         li.social__item
                                    //-             a(href=soc.link target="_blank")
                                    //-                 i(class="fa "+soc["icon"])
                                    //-                 span= soc.name

                                    != site.menus.main


                //- ==================================================
                //- > CONTENT
                //- ==================================================
                block main
                    main.site-main(role="main")

                        //- ========== INTRO ========== -//
                        block intro
                            .site-intro
                                .container
                                    h1!= post.post_title


                        //- ========== BREADCRUMB ========== -//
                        block breadcrumb
                            //- .container.breadcrumb-container!= site.breadcrumb


                        //- ========== ASIDE ========== -//
                        block aside
                            //- .site-aside


                        //- ========== MESSAGES ========== -//
                        block messages
                            //- - if ($error_message || $success_message)
                            //-     section.bg-white.small-padding: .container
                            //-         if error_message
                            //-             p.page-message.color-error!= error_message
                            //-         if success_message
                            //-             p.page-message.color-success!= success_message

                        //- ========== CONTENT ========== -//
                        block sections
                            include ../includes/_sections


                //- ==================================================
                //- > FOOTER
                //- ==================================================
                block footer
                    footer.site-footer(role="contentinfo")
                        .container
                            != site.menus.footer


        //- ==================================================
        //- > MOBILE NAVIGATION
        //- ==================================================
        button.mobile-nav-trigger
            span
            span
            span

        aside.mobile-nav
            != site.menus.mobile


        //- ==================================================
        //- > OVERLAYS
        //- ==================================================
        #scroll-top

        = wp_footer()
