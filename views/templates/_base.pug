doctype

html(lang=site.language)

    //- =============================================================================
    //- > HEAD
    //- =============================================================================
    head
        meta(charset=site.charset)
        meta(name="description" content=site.description)
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="pingback" href=site.pingback_url)
        = wp_head()
        block head



    //- =============================================================================
    //- > BODY
    //- =============================================================================
    body(class=site.body_class)

        //- ==================================================
        //- > MAIN
        //- ==================================================
        main#app
            block main


                //- ==================================================
                //- > HEADER
                //- ==================================================
                block header
                    header(role="navigation")#app-header

                        nav.container
                            .row
                                .gr-1
                                    a#main-logo(href=site.url rel="home")= site.name

                                .gr-11
                                    //- nav#social-menu: ul
                                        each soc in site.header.social
                                            li
                                                a(href=soc.link target="_blank")
                                                    i(class="fa "+soc["icon"])
                                                    span= soc.name

                                    != site.menus.main

                                    //- #mobile-menu-trigger.hamburger Afficher le menu


                //- ==================================================
                //- > CONTENT
                //- ==================================================
                block content
                    #app-content(role="main")

                        //- ========== INTRO ========== -//
                        block intro
                            #intro
                                .container
                                    //- != intro_content


                        //- ========== BREADCRUMB ========== -//
                        block breadcrumb
                            //- .container.breadcrumb-container!= site.breadcrumb


                        //- ========== ASIDE ========== -//
                        block aside


                        //- ========== MESSAGES ========== -//
                        block messages
                            //- - if ($error_message || $success_message)
                            //-     section.bg-white.small-padding: .container
                            //-         if error_message
                            //-             p.page-message.error!= error_message
                            //-         if success_message
                            //-             p.page-message.success!= success_message


                        //- ========== CONTENT ========== -//
                        block sections
                            include ../parts/_sections


                //- ==================================================
                //- > FOOTER
                //- ==================================================
                block footer
                    footer#app-footer(role="contentinfo")
                        .container
                            != site.menus.footer


        //- ==================================================
        //- > MOBILE NAVIGATION
        //- ==================================================
        button#app-nav-mobile-trigger
            span
            span
            span

        aside#app-nav-mobile
            != site.menus.mobile

        //- ==================================================
        //- > OVERLAYS
        //- ==================================================
        #scroll-top



        = wp_footer()
