//- > VIEW : SEARCH
//- =============================================================================
extends templates/_base

//- ==================================================
//- > INTRO
//- ==================================================
block intro
    .site-intro.search-page__intro
        h1!= __("Recherche", "syltaen")

//- ==================================================
//- > SECTIONS
//- ==================================================
block sections

    section.md-padding-vertical.bg-white

        .container
            h2.search-page__title!= title


        .container: .row

            each post_type in results

                if post_type.count
                    .gr-6.gr-12-xs
                        h3.search-page__type  <strong>#{post_type.count}</strong> #{post_type.label}

                        ul
                            each result in post_type.posts
                                li
                                    a(href=result.url)= result.post_title


    section.md-padding-vertical.bg-light-grey: .container
        h2!= __("Modifier votre recherche", "syltaen")
        form(action=site.url)
            input.bg-white(name="s" value!=search)