extends mail-default

block header

    style.
        .preview-block {
            background: #{primary};
            padding: 5px 0;
            color: white;
            margin-bottom: 30px;
            box-shadow: inset 0 -5px 5px rgba(0, 0, 0, .2);
        }

            .preview-block--bottom {
                margin-top: 50px;
            }

        .container {
            width: 600px;
            margin: 0 auto;
            display: flex;
            flex-flow: row nowrap;
        }

        .col {
            padding: 0 10px;
            flex-grow: 1;
        }

        .preview-action {
            display: block;
            padding: 10px;
            text-decoration: none;
            background: white;
            color: #333;
            margin-top: 20px;
            text-align: center;
        }


    .preview-block.preview-block--top: .container
        .col
            h2!= mail.Subject
            p De : #{mail.FromName} &lt;#{mail.From}&gt;
            p Ã€ : #{to}

        .col
            each url, label in actions
                a.preview-action(href=url)!= label