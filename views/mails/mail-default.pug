//- ==================================================
//- > VIEW : MAIL - DEFAULT
//- ==================================================
doctype html
html
    head
        title= mail.Subject
        meta(http-equiv="Content-Type" content="text/html; charset=".$mail->CharSet."")
        style.
            body {
                font-family: sans-serif;
                color: #333;
                font-size: 15px;
            }

            a {
                color: #{primary}
            }

    body(style="background-color:#f5f5f5; padding:0; margin:0;"): table(width="100%" border="0" cellspacing="0" cellpadding="0"): tr: td(bgcolor="#f5f5f5" style="background-color:#f5f5f5;")

        //- ========== CONTAINER ========== -//
        table(width="600" border="0" cellspacing="0" cellpadding="0" align="center")

            //- Spacer
            tr: td(height="10" width="600"): img(src=imgpath+"spacer.gif" height="10" width="600" align="left" style="display: block; margin: 0;")

            //- ==================================================
            //- > HEADER
            //- ==================================================

            tr: td: table(width="600" border="0" cellspacing="0" cellpadding="0")
                tr
                    td(width="25" height="60"): img(src=imgpath+"spacer.gif" width="25" height="60" align="left" style="display: block; margin: 0;")
                    td(rowspan="3" width="75" height="75")
                        a(href=url target="_blank")
                            img(src=imgpath+"mail_logo.png" width="75" height="75" align="left" style="display: block; margin: 0;")
                    td(width="25" height="60"): img(src=imgpath+"spacer.gif" width="25" height="60" align="left" style="display: block; margin: 0;")
                    td(width="475")
                        h1(style="font-size: 18px; margin: 0; color: ".$secondary.";")
                            = mail.FromName
                tr(bgcolor=primary style="background-color: ".$primary.";")
                    td(width="10" height="3"): img(src=imgpath+"spacer.gif" width="10" height="3" align="left" style="display: block; margin: 0;")
                    td(width="500" colspan="2"): img(src=imgpath+"spacer.gif" width="500" height="3" align="left" style="display: block; margin: 0;")
                tr(bgcolor="#ffffff" style="background-color: #ffffff;")
                    td(width="10" height="12"): img(src=imgpath+"spacer.gif" width="10" height="12" align="left" style="display: block; margin: 0;")
                    td(width="500" colspan="2"): img(src=imgpath+"spacer.gif" width="500" height="12" align="left" style="display: block; margin: 0;")

            //- ==================================================
            //- > BODY
            //- ==================================================
            tr: td(width="600" bgcolor="#ffffff" style="background-color: #ffffff;"): table(width="540" border="0" cellspacing="0" cellpadding="0" align="center")
                //- Spacer
                tr: td(height="30" width="540"): img(src=imgpath+"spacer.gif" height="30" width="540" align="left" style="display: block; margin: 0;")

                //- Content
                tr: td(width="540")
                    != body

                //- Spacer
                tr: td(height="30" width="540"): img(src=imgpath+"spacer.gif" height="30" width="540" align="left" style="display: block; margin: 0;")


            //- Spacer
            tr: td(height="20" width="600"): img(src=imgpath+"spacer.gif" height="20" width="600" align="left" style="display: block; margin: 0;")